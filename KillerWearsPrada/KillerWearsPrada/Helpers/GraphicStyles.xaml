    <Style x:Key="RedBlinkSx" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" >
                                    <Storyboard x:Name="stopRedBlink2">
                                        <DoubleAnimationUsingKeyFrames
                Storyboard.TargetName="dropShadow"
                Storyboard.TargetProperty="(DropShadowEffect.Opacity)">
                                            <LinearDoubleKeyFrame Value="1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard x:Name="startRedBlink2">
                                        <DoubleAnimationUsingKeyFrames
                Storyboard.TargetName="dropShadow"
                Storyboard.TargetProperty="(DropShadowEffect.Opacity)"
                Duration="0:0:1"
                RepeatBehavior="Forever">
                                            <LinearDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="0.2"/>
                                            <LinearDoubleKeyFrame KeyTime="0:0:1" Value="1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">

                                </VisualState>
                                <!-- Posso cambiare l'immagine della porta con una scura -->
                                <VisualState x:Name="Disabled">
                                    <Storyboard Name="shrinkStoryboardEnd" Storyboard.TargetName="image4" >
                                        <DoubleAnimation Storyboard.TargetName="doorDisabled" Storyboard.TargetProperty="Opacity" Duration="0" From="0" To="1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Image x:Name="sxDoor" Source="{Binding Mode=OneWay, Source={StaticResource SXdoor_Image}}"  RenderTransformOrigin="0.5,0.5" >
                            <Image.Effect>
                                <DropShadowEffect Color="Red" x:Name="dropShadow" ShadowDepth="1" BlurRadius="70" />
                            </Image.Effect>
                        </Image>

                        <Image x:Name="doorDisabled" Source="{Binding Mode=OneWay, Source={StaticResource SXdoorDisabled_Image}}" Opacity="0"  />

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
            
        </Setter>
    </Style>

